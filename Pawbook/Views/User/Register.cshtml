@model Pawbook.Models.User

@{
	ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/registration.css" asp-append-version="true" />


<div class="container-fluid d-flex pt-5 w-100">
	<div class="card col-md-4">
		<img class="my-auto d-block w-100" src="~/img/logo_name.png">
	</div>
	<div class="card col-md-8">
		<div class="card-body">
			<h5 class="card-title">Sign up!</h5>
			<form method="post" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-row">
					<div class="form-group col-md">
						<label asp-for="Email">Owner's email</label>
						<input asp-for="Email" class="form-control" placeholder="Email">
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>

				<div class="form-row">
					<div class="form-group col-md-6">
						<label asp-for="OwnerName">Owner's name</label>
						<input asp-for="OwnerName" class="form-control" placeholder="John">
						<span asp-validation-for="OwnerName" class="text-danger"></span>
					</div>
					<div class="form-group col-md-6">
						<label asp-for="Name">Pet's name</label>
						<input asp-for="Name" class="form-control" placeholder="Timmy">
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
				</div>

				<div class="form-row">
					<div class="form-group col-md-6">
						<label asp-for="Password">Password</label>
						<input asp-for="Password" class="form-control" type="password" placeholder="Password">
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-group col-md-6">
						<label asp-for="ConfirmPassword">Confirm Password</label>
						<input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Password">
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
				</div>

				<div class="form-row">
					<div class="form-group col-md-6">
						<label asp-for="Gender" class="control-label">Gender</label>
						<select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
							<option selected="selected" value="">Choose...</option>
						</select>
						<span asp-validation-for="Gender" class="text-danger"></span>
					</div>
					<div class="form-group col-md-6">
						<label asp-for="Type" class="control-label">What am I?</label>
						<select asp-for="Type" asp-items="Html.GetEnumSelectList<Pawbook.Models.Type>()" class="form-select">
							<option selected="selected" value="">Choose...</option>
						</select>
						<span asp-validation-for="Type" class="text-danger"></span>
					</div>
				</div>
				<div class="my-auto">
					<label asp-for="ImageFile" class="form-label">Choose profile image</label>
					<input asp-for="ImageFile" accept="image/*" name="ImageFile" type="file" class="form-control" id="formFile">
				</div>
				<div class="my-3">
					<button type="submit" class="btn btn-primary">Save</button>
				</div>
				<div class="form-row my-3">
					<div class="form-group col-md">
						<p>Already have an account?</p>
						<a asp-controller="User" asp-action="Login">
							Log in
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
