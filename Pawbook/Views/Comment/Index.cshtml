@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@model IEnumerable<Pawbook.Models.Comment>

@{
	ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/feed.css" asp-append-version="true" />

<div class="container">
	<div class="mx-5 my-3">
		<h3>Comments</h3>
	</div>
	<div class="mx-5 my-1">
		@{
			int postId = 0;
		}
		@foreach (var comment in Model)
		{
			postId = comment.PostId;
			<div class="container my-1 feeditem">
				<div class="row">
					<div class="col-md">
						<div class="card mb-4">
							<div class="card-body">
								<div class="media mb-2 d-flex justify-content-between">
									<div>
										<a asp-controller="Home" asp-action="Profile" asp-route-userId=@comment.UserId class="a">
											<img src="@Url.Content("~/img/profile/" + comment.User.ImageName)" class="d-inline-block ui-w-40 rounded-circle" alt="profileImg">
											<div class="media-body ml-3 d-inline-block">
												<div class="flex-grow-1 ms-3">
													@Html.DisplayFor(modelItem => comment.User.Name)
													<div class="text-muted small">@Convert.ToDateTime(comment.CreatedAt).ToString("hh:mm tt dd MMMM yyyy")</div>
												</div>
											</div>
										</a>
									</div>
								</div>
								<div class="card">
									<div class="mx-3 my-2">
										@Html.DisplayFor(modelItem => comment.Body)
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
<div class="d-flex justify-content-center">
	<a asp-controller="Comment" asp-action="Create" asp-route-postId=@postId asp-route-loggedInUserId=@HttpContextAccessor.HttpContext.Session.GetInt32("LoggedInUserId") class="btn btn-primary">
		<h3><i class="fa-regular fa-comment"></i> Add comment</h3>
	</a>
</div>