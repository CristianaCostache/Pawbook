@{
	ViewData["Title"] = "Gallery";
}
@using System.IO.Compression
@using System.Text


<div class="w-100">

	<div class="container-fluid my-3 feeditem">
		<div class="card col-md">
			<div class="card-body">
				<h2 class="card-title" id="meet">Let's <span class="text-success">meet</span> out little friends!</h2>
				<div class="row">
					<hr class="hr text-success" />
				</div>
				<!-- Gallery -->
				<div class="row">
					<div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
						<div data-bs-toggle="modal" data-bs-target="#imageModal1">
							<img src="/img/gallery/hamster.png"
								 class="w-100 shadow-1-strong rounded mb-4"
								 alt="Waves at Sea"/>
						</div>
						<div data-bs-toggle="modal" data-bs-target="#imageModal2">
							<img src="/img/gallery/otter_small.jpg"
								 class="w-100 shadow-1-strong rounded mb-4 img-blur"
								 alt="Wintry Mountain Landscape"/>
						</div>
						<div class="row">
							<hr class="hr text-success" />
						</div>
