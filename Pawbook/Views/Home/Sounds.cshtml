@{
	ViewData["Title"] = "Sounds";
}
@using System.IO.Compression
@using System.Text


<div class="w-100">

	<div class="container-fluid my-3 feeditem">
		<div class="card col-md">
			<div class="card-body">
				<h2 class="card-title">Let's <span class="text-success">hear</span> our little friends!</h2>
				<div class="row">
					<hr class="hr text-success" />
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="row my-2">
						<h5>🐶
							<audio controls>
								<source src="/sound/dogbark.wav" type="audio/mpeg">
							</audio>
						</h5>
						</div>
						<div class="row my-2">
						<h5>🐱
							<audio controls>
								<source src="/sound/domestic_cat.mp3" type="audio/mpeg">
							</audio>
						</h5>
						</div>
						<div class="row my-2">
						<h5>🦆
							<audio controls>
								<source src="/sound/duck.mp3" type="audio/mpeg">
							</audio>
						</h5>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>


</div>
