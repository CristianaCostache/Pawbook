						  <source src="/sound/domestic_cat.mp3" type="audio/mpeg">
						</audio>*@
					</div>

					<div class="col-lg-4 mb-4 mb-lg-0">
						<div data-bs-toggle="modal" data-bs-target="#imageModal3">
							<img src="/img/gallery/cat.png"
								 class="w-100 shadow-1-strong rounded mb-4 img-rotate"
								 alt="Wintry Mountain Landscape" />
						</div>
						<div>
							<img src="/img/gallery/duck.jpg"
								 class="w-100 shadow-1-strong rounded"
								 alt="Wintry Mountain Landscape" />
						</div>
					</div>

					<div class="col-lg-4 mb-4 mb-lg-0">
						<div data-bs-toggle="modal" data-bs-target="#imageModal5">
							<img src="/img/gallery/turtle.png"
								 class="w-100 shadow-1-strong rounded mb-4 img-crop"
								 alt="Waves at Sea" />
						</div>
						<div data-bs-toggle="modal" data-bs-target="#imageModal6">
							<img src="/img/gallery/rabbit_small.jpg"
								 class="w-100 shadow-1-strong rounded mb-4 img-scale"
								 alt="Yosemite National Park"/>
						</div>
						<div class="row">
							<hr class="hr text-success" />
						</div>
@*						<audio controls>
						  <source src="/sound/dogbark.wav" type="audio/mpeg">
						</audio>*@
					</div>
				</div>
				<!-- Gallery -->

			</div>
		</div>
	</div>

