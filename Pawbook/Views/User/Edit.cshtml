@model Pawbook.Models.User

@{
	ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/feed.css" asp-append-version="true" />

<div class="w-100">
	<div class="container-fluid my-3 feeditem">
		<div class="card col-md">
			<div class="card-body">
				<h5 class="card-title">Modify your profile information</h5>
				<form method="post" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="UserId" />
					<div class="my-auto">
						<label asp-for="ImageFile" class="form-label">Insert image</label>
						<input asp-for="ImageFile" accept="image/*" name="ImageFile" type="file" class="form-control" id="formFile">
					</div>
					<div class="my-3">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
