@model Pawbook.Models.User

@{
	ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/feed.css" asp-append-version="true" />

<div class="w-100">
	<div class="container-fluid my-3 feeditem">
		<div class="card col-md">
			<div class="card-body">
				<h5 class="card-title">Modify your profile information</h5>
				<form method="post" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="UserId" />
					<div class="form-group">
						<label asp-for="Email" class="control-label"></label>
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password" class="control-label"></label>
						<input asp-for="Password" class="form-control" type="password" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="OwnerName" class="control-label"></label>
						<input asp-for="OwnerName" class="form-control" />
						<span asp-validation-for="OwnerName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Gender" class="control-label"></label>
						<select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
							<option selected="selected" value="">Choose...</option>
						</select>
						<span asp-validation-for="Gender" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Type" class="control-label"></label>
						<select asp-for="Type" asp-items="Html.GetEnumSelectList<Pawbook.Models.Type>()" class="form-select">
							<option selected="selected" value="">Choose...</option>
						</select>
						<span asp-validation-for="Type" class="text-danger"></span>
					</div>
					<div class="my-auto">
						<label asp-for="ImageFile" class="form-label">Insert image</label>
						<input asp-for="ImageFile" accept="image/*" name="ImageFile" type="file" class="form-control" id="formFile">
					</div>
					<div class="my-3">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
