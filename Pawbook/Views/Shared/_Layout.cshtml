@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Pawbook</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Pawbook.styles.css" asp-append-version="true" />
	 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body class="body">
	@if (@HttpContextAccessor.HttpContext.Session.GetInt32("LoggedInUserId") != null)
	{
		var loggedInUserId = @HttpContextAccessor.HttpContext.Session.GetInt32("LoggedInUserId");

		<div>
			<div class="card-body d-flex justify-content-center header">
				(っ◔◡◔)っ  <i class="fa-solid fa-paw mx-2"></i>  PawBook  <i class="fa-solid fa-paw mx-2"></i>
			</div>
		</div>


		<header class="sticky-top">
			<nav class="navbar navbar-dark  navbar-expand-md bg-faded justify-content-center" style="padding: 5px;">
				<div class="row">
					<div class="col md-4">
						<a asp-controller="Home" asp-action="Feed">
							<img src="~/img/logo.png" class="d-inline-block ui-w-40 rounded-circle" alt="logo">
						</a>
					</div>
					<div class="col md-4 flex-grow-2 my-auto">
						<a class="navbar-brand d-flex w-10 mr-auto" asp-controller="Home" asp-action="Feed">PawBook</a>
					</div>
				</div>
				<div class="navbar-collapse">
					<ul class="nav navbar-nav ml-auto w-100 justify-content-end">
						<li class="nav-item">
							<a class="nav-link active" asp-controller="Post" asp-action="Create">Add a new Post</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-controller="User" asp-action="Search">Find a PAWL</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-controller="Home" asp-action="Feed">Feed</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-controller="Home" asp-action="Profile" asp-route-userId=@loggedInUserId asp-route-isLoggedUser=1>Profile</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-controller="Home" asp-action="AboutUs">About us</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" asp-controller="User" asp-action="Logout">Log out</a>
						</li>
					</ul>
				</div>
			</nav>
		</header>

		string controller = "";
		string action = "";

		if (ViewContext.RouteData.Values["controller"] != null)
		{
			controller = ViewContext.RouteData.Values["controller"].ToString();
		}

		if (ViewContext.RouteData.Values["action"] != null)
		{
			action = ViewContext.RouteData.Values["action"].ToString();
		}

		@if (controller.ToLower() == "home" && action.ToLower() == "aboutus")
		{
			<div class="d-flex">
				<div class="sticky-sidebar" id="sidebar">
					<div class="sidebar">
						<a asp-controller="Post" asp-action="Create" class="sidebar-link"><i class="bi bi-file-post text-white"></i></a>
						<hr />
						<a asp-controller="User" asp-action="Search" class="sidebar-link"><i class="bi bi-search text-white"></i></a>
						<hr />
						<a asp-controller="Home" asp-action="Feed" class="sidebar-link"><i class="bi bi-house text-white"></i></a>
						<hr />
						<a asp-controller="Home" asp-action="AboutUs" class="sidebar-link"><i class="bi bi-info-square text-white"></i></a>
						<hr />
					</div>
				</div>
				<div class="main">
					<div class="container">
						<main aria-label="body" role="main" class="pb-3">
							@RenderBody()
						</main>
					</div>
				</div>
			</div>

		<div class="main">
			<div class="container">
				<main aria-label="body" role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</div>	

			<footer class="footer container-fluid text-center">
		<div class="container p-4 pb-2">
			<div class="row">
				<div class="col-md-12">
					<ul class="list-inline mb-0">
						<li class="list-inline-item">
							<a class="text-white" href="https://www.facebook.com/">
								<i class="fab fa-facebook fa-2x"></i>
							</a>
						</li>
						<li class="list-inline-item">
							<a class="text-white" href="https://twitter.com/">
								<i class="fab fa-twitter fa-2x"></i>
							</a>
						</li>
						<li class="list-inline-item">
							<a class="text-white" href="https://instagram.com/">
								<i class="fab fa-instagram fa-2x"></i>
							</a>
						</li>
						<li class="list-inline-item">
							<a class="text-white" href="https://www.linkedin.com/">
								<i class="fab fa-linkedin fa-2x"></i>
							</a>
						</li>
					</ul>
				</div>

				<div class="col-md-12">
					<a class="text-white" href="https://localhost:7095/">© 2023 Copyright: Pawbook</a>
				</div>
			</div>
		</div>
			</footer>
		} else
		{
			<div class="main">
				<div class="container">
					<main aria-label="body" role="main" class="pb-3">
						@RenderBody()
					</main>
				</div>
			</div>	
		}

	} else
	{
		<div class="main">
			<div class="container">
				<main aria-label="body" role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</div>	
	}

	<script src="https://kit.fontawesome.com/bdd3c859c0.js" integrity="sha256-06LFigSsN/KKa2JtiL0ib0LK5+uKwVHrqvaTjWxf1KM= sha384-8Vww8zMWsWUqjz5KeT2zVJqaW1n3RmlW9k90+Wat3w5lorIFFd9yMMx6voXl5WMu sha512-njuVG6T+4bqEFT9oU+qAxsbuaLhDdFeuwcb/fQWcshveMOknOPRWj1WSnwvppv4cbN52S/pPnLjlVGBeOzte+w==" crossorigin="anonymous"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
